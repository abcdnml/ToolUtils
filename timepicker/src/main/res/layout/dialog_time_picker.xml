<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_fff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_dialog_title_set_time"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/white_fff"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="16sp"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_fc"
        android:padding="2dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_fff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp" >
            <com.aaa.lib.view.timepicker.view.WheelView
                android:id="@+id/wv_hour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1" />

            <com.aaa.lib.view.timepicker.view.WheelView
                android:id="@+id/wv_minute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1" />

            <com.aaa.lib.view.timepicker.view.WheelView
                android:id="@+id/wv_secend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_dialog_set_time_cancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/white_fff"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/gray_333" />

        <Button
            android:id="@+id/btn_dialog_set_time_confirm"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/white_fff"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/gray_333" />
    </LinearLayout>

</LinearLayout>